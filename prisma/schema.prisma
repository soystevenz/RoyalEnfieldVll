generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Contact {
  id        Int      @id @default(autoincrement())
  nombre    String
  apellido  String
  correo    String @unique
  celular   String
  ciudad    String
  createdAt DateTime @default(now())
}

model Gallery {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String   @db.Text
  imagen      String   // Aqu√≠ guardaremos la ruta de la imagen
  createdAt   DateTime @default(now())
}